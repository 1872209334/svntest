<ion-header no-border>
  <ion-navbar color="arc">
    <!--<ion-icon name="ios-arrow-back" class="font-bold float-left back_btn"-->
              <!--(click)="goBack()">-->
    <!--</ion-icon>-->
    <ion-title>{{title}}</ion-title>
  </ion-navbar>
</ion-header>
<ion-content no-bounce padding class="form_content">
  <ion-item>
    <ion-input type="password" placeholder="请输入旧密码" [(ngModel)]="userInput.oldPassword"></ion-input>
  </ion-item>
  <ion-item>
    <ion-input type="password" placeholder="请输入新密码" [(ngModel)]="userInput.newPassword"></ion-input>
  </ion-item>
  <ion-item>
    <ion-input type="password" placeholder="请确认新密码" [(ngModel)]="userInput.confirmPassword"></ion-input>
  </ion-item>
  <button ion-button style="font-size:16px;height:46px;border-radius:4px;background-color:#2982E6;width: 100%;margin-top: 2.5rem;padding: 0" (click)="changePwd()">确定</button>
</ion-content>
