        <div class="info_box">
          <button ion-item (click)="showInfo1()">
            <img class="info_header_pictrue" src="../../assets/imgs/avatar.png">
            <div class="info_name">
              <h1 class="user_name_text">{{userInfo.username}}</h1>
              <img class="info_phone_icon" src="../../assets/imgs/user_icon_phone.png">
              <span class="user_phone_num_first">{{userInfo.mobile}}</span>
            </div>
          </button>
          <div class="user_phone_box">
            <img src="../../assets/imgs/map_img_admin_1.png">
            <p class="user_info_phone_num" (click)="tel()">{{userInfo.adminMobile}}</p>
          </div>
        </div>
      </ion-item>
    </ion-item-sliding>
  <ion-item class="info_item">
    <img class="info_item_icon" src="../../assets/imgs/user_list_icon_version@3x.png">
    <span class="info_item_text">当前版本</span>
    <span class="info_item_v">V1.0</span>
  </ion-item>

  <button ion-item (click)="resetPwd()" class="user_item_button info_item">
    <img class="info_item_icon" src="../../assets/imgs/user_list_icon_code@3x.png">
    <span class="info_item_text">修改密码</span>
  </button>
  <button ion-button class="login_out_btn" style="position: absolute;bottom: 2.5rem;width:80%;left:10%;padding-right: 0;border-radius: 20px;" (click)="login_out()" outline>退出登录</button>
</ion-content>
