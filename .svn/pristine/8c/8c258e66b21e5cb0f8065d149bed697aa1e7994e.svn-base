<ion-content no-bounce scroll="false">

  <div>
    <div class="logobox">
      <div class="logo"></div>
    </div>
    <div style="margin-left:28%;margin-top:6rem;width:50%;font-size:32px;font-family:pingfang;" > 您好，<br/></div>
    <div style="margin-left:28%;margin-top:0.6rem;width:50%;font-size:16px;font-family:pingfang;color:#909399" >欢迎使用莱茵斯App</div>
  </div>

  <div style = "margin-top:5rem;" >
    <ion-item style="margin-top:0rem;width:96%;">
      <ion-input style="top:3rem;left:2rem;margin-top:0rem;width:100%;font-size:18px;" [(ngModel)]="loginInput.account"  type="text"  placeholder="请输入用户名/手机号" ></ion-input>
    </ion-item>
    <ion-item style="margin-top:0rem;width:96%;">
      <ion-input style="margin-top:1rem;width:70%;font-size:18px;" [(ngModel)]="loginInput.password" type="password" placeholder="请输入密码"></ion-input>
    </ion-item>
  </div>

  <div style="margin-top: 0.5rem;width: 100%;height:2rem;padding: 0 16px">
    <!--<span  style="float:left;color:#ff0000;font-size:12px;" >错误提示信息</span>-->
    <span style="float:right;color:#387EE8" (click)="resetPwd()">忘记密码</span>
  </div>
  <div style="margin-top:0.0rem;width: 90%;margin-left:auto;margin-right:auto">
    <button style="background-color: #2982E5" class="login_btn" ion-button round (click)="doLogin()">
      <span class="button-inner">登录</span>
    </button>
  </div>

  <!--<div style="position:absolute;float:right;margin-top: 1.8rem;width: 90%;">
    <button style="margin-left:46%;background-color:white;color:#387EE8;font-size:16px;" ><span class="button-inner" (click)="register()">注册账号</span></button>
  </div>-->
