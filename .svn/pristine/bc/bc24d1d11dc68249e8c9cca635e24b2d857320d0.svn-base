  html {
    font-size: 12.31px;
  }
}

@media only screen and (max-width: 560px) and (min-width: 540px) {
  html {
    font-size: 13.28px;
  }
}

@media only screen and (max-width: 570px) and (min-width: 560px) {
  html {
    font-size: 13.64px;
  }
}

@media only screen and (max-width: 630px) and (min-width: 570px) {
  html {
    font-size: 14.49px;
  }
}

@media only screen and (max-width: 640px) and (min-width: 630px) {
  html {
    font-size: 15.33px;
  }
}

@media only screen and (max-width: 710px) and (min-width: 640px) {
  html {
    font-size: 15.45px;
  }
}

@media only screen and (max-width: 720px) and (min-width: 710px) {
  html {
    font-size: 17.14px;
  }
}

@media only screen and (min-width: 720px) {
  html {
    font-size: 17.39px;
  }
}

@media only screen and (min-width: 1080px) {
  html {
    font-size: 26.08px;
  }
}

@media only screen and (width: 320px) {
  html {
    font-size: 7.75px;
  }
}

@media only screen and (width: 360px) {
  html {
    font-size: 8.77px;
  }
}

@media only screen and (width: 375px) {
  html {
    font-size: 9.06px;
  }

}

@media only screen and (width: 414px) {
  html {
    font-size: 10px;
  }
}

@media only screen and (width: 768px) {
  html {
    font-size: 18.55px;
  }
}

@media only screen and (width: 1024px) {
  html {
    font-size: 25px;
  }
}



/*公共样式*/
body{
  background: #fffcf7;
}

@font-face {
  font-family: PingFang;
  src: url(../assets/font/PingFang_Medium.ttf);
}

@font-face {
  font-family: YueYuan;
  src: url(../assets/font/MFYueYuan.otf);
}
h1,h2,h3,h4,h5,p,span,a,button,input{
  font-family: PingFang;
  font-weight:lighter;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
}

*{
  margin: 0;
  padding: 0;
  list-style: none;
}

body{
  background: #fff;
}

input[type="button"], input[type="submit"], input[type="reset"] {
  -webkit-appearance: none;
}

textarea {
  -webkit-appearance: none;
}
input:focus, textarea:focus {
  outline: none;
}

input:focus{
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  -webkit-user-modify:read-write-plaintext-only;
}

a {
  text-decoration: none;
  -webkit-tap-highlight-color:rgba(0,0,0,0);

}

input, textarea, button, a {
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  -webkit-appearance: none;
}

* {
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  font-family: "PingFang";
  font-weight:lighter;
}

input[type="submit"],input[type="button"],button {
  border: 0;
  padding-left:0 !important;
}
input[type="text"],input[type="password"]{
  //border: 1px solid #bbbbbb;
  color: #000000 !important;
}
.font-bold{
  font-weight: bold;
}