<ion-header>

  <ion-navbar>
    <ion-title></ion-title>
  </ion-navbar>

</ion-header>

<ion-content no-bounce padding>

  <div style="margin-left:16px;margin-top:30px;width:100%;font-size:32px;font-weight: bold" > 输入短信验证码 <br/>
      <span style="margin-left:0px;margin-top:100px;width:100%;font-size:16px;" > 验证码已发送至 +86 {{mobile}} </span>
  </div>

  <div style="top:30rem;">
    <div class="row" >
      <div class="col" style="width:10%;"><ion-item  ></ion-item>
        <ion-input id="input11" autofocus="autofocus" type="tel" maxlength="1"  #input11 style="left:3rem;top:-4rem;color:#303133;width:80%;font-size:24px;text-align:center;" [(ngModel)]="userCode1"  (ionChange)="focusInput(input12,userCode1);" ></ion-input>
      </div>
      <div class="col" style="width:10%;"><ion-item  ></ion-item>
        <ion-input maxlength="1" #input12 style="left:3rem;top:-4rem;color:#303133;width:80%;font-size:24px;text-align:center;" [(ngModel)]="userCode2" type="tel" (ionChange)="focusInput(input13,userCode2);" ></ion-input>
      </div>
      <div class="col" style="width:10%;"><ion-item  ></ion-item>
        <ion-input maxlength="1" #input13 style="left:3rem;top:-4rem;color:#303133;width:100%;font-size:24px;text-align:center;" [(ngModel)]="userCode3" type="tel" (ionChange)="focusInput(input14,userCode3);" ></ion-input>
      </div>
      <div class="col" style="width:10%;"><ion-item  ></ion-item>
        <ion-input maxlength="1" #input14 style="left:3rem;top:-4rem;color:#303133;width:100%;font-size:24px;text-align:center;" [(ngModel)]="userCode4" type="tel" (ionChange)="verify()" ></ion-input>
      </div>
    </div>
  </div>

  <button ion-button [disabled]="state" (click)="resend()" [ngStyle]="{'color':state == true?'#606266':'#387EE8'}" style="margin-left:20%;width: 60%;margin-top: 2.5rem;padding: 0;background-color:white;font-size:16px " >
    {{this.getCodeText}}
  </button>


</ion-content>
